# Email Configuration (for invoice ingestion)
EMAIL_SERVER=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# AWS Configuration (optional - for AWS billing)
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Alert Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=client@company.com
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Database (optional - for storing historical data)
DATABASE_URL=sqlite:///data/spend_data.db

# Dashboard Settings
DASHBOARD_PORT=8501
AUTO_REFRESH_MINUTES=5
ALERT_THRESHOLD_PERCENTAGE=10

# Model Settings
USE_GPU=true
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Security
SECRET_KEY=your-secret-key-here
API_KEY=optional-api-key-for-endpoints